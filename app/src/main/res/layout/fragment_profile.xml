<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProfileImage"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="@string/soumadip_dey"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:padding="5dp"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="+91-8768454982"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:padding="5dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMobileNumber"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="souma.hitech@gmail.com"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:padding="5dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailAddress"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="Antira,Uchalan,Burdwan,713427"
            android:textColor="@color/black"
            android:minHeight="50dp"
            android:padding="5dp"
            android:textSize="17sp" />

    </RelativeLayout>

</FrameLayout>